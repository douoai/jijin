{
  "name": "gold-price-monitor",
  "version": "1.0.0",
  "description": "黄金价格实时监控系统 - 使用 Cloudflare Workers + D1",
  "main": "worker.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "d1:create": "wrangler d1 create gold-price-db",
    "d1:execute": "wrangler d1 execute gold-price-db --file=schema.sql",
    "d1:query": "wrangler d1 execute gold-price-db --command"
  },
  "keywords": [
    "gold",
    "price",
    "monitor",
    "cloudflare",
    "workers",
    "d1"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
